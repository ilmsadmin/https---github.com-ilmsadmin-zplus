ENVIRONMENT=development
PORT=3201
API_PREFIX=api/v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=system_db
DB_SYNCHRONIZE=false
DB_LOGGING=true
DB_SSL=false
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=10000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600
REDIS_DB=0
REDIS_KEY_PREFIX=marketplace_

# Kafka
KAFKA_ENABLED=true
KAFKA_CLIENT_ID=module-marketplace
KAFKA_BROKERS=localhost:9092
KAFKA_CONSUMER_GROUP=module-marketplace-group
KAFKA_SSL=false
KAFKA_SASL_MECHANISM=plain
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# API Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ENABLED=true
CORS_ORIGIN=*

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=Module Marketplace API
SWAGGER_DESCRIPTION=Module Marketplace Service for Multi-Tenant System
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# Module Storage
MODULE_STORAGE_PATH=D:\www\multi-tenant\modules
MODULE_REGISTRY_URL=https://registry.example.com
